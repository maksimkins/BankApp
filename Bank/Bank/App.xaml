<Application x:Class="Bank.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Bank"
             xmlns:vm="clr-namespace:Bank.ViewModels"
             xmlns:v="clr-namespace:Bank.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <DataTemplate DataType="{x:Type vm:HomeViewModel}">
            <v:HomeVIew/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:PayForLoanViewModel}">
            <v:PayForLoanView/>
        </DataTemplate>


        <DataTemplate DataType="{x:Type vm:PayfordebtViewModel}">
            <v:PayfordebtView/>
        </DataTemplate>


        <DataTemplate DataType="{x:Type vm:TransferViewModel}">
            <v:TransferView/>
        </DataTemplate>


        <DataTemplate DataType="{x:Type vm:AddUserViewModel}">
            <v:AddUserView/>
        </DataTemplate>


        <DataTemplate DataType="{x:Type vm:AddLoanClientViewModel}">
            <v:AddLoanClientView/>
        </DataTemplate>



    </Application.Resources>
</Application>
